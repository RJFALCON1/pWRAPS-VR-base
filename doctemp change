private void SavePositionToJson(Vector3 position)
{
    // Create a new instance of the TrackerPosition class and populate it with the tracker position data
    TrackerPosition trackerPosition = new TrackerPosition
    {
        x = position.x,
        y = position.y,
        z = position.z
    };

    // Serialize the tracker position data to JSON format
    string jsonData = JsonUtility.ToJson(trackerPosition);

    // Specify the file path where the JSON data will be saved
    string filePath = Application.dataPath + "/TrackerPositions.json";

    // Write the JSON data to the file, appending it to any existing data
    File.AppendAllText(filePath, jsonData + "\n");

    // Log a message to confirm that the position was saved
    Debug.Log("Position saved to JSON: " + jsonData);
}

// Class to represent the tracker position data
private class TrackerPosition
{
    public float x; // The X coordinate of the tracker's position
    public float y; // The Y coordinate of the tracker's position
    public float z; // The Z coordinate of the tracker's position
}
